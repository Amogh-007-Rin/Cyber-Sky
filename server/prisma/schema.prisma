generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum Decision {
  ALLOW
  BLOCK
  FLAG
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Log {
  id        Int      @id @default(autoincrement())
  ip        String
  eventType String   // e.g., LOGIN_FAIL, LOGIN_SUCCESS, PROMPT_INJECTION
  timestamp DateTime @default(now())
  details   Json?
  incidents Incident[]
}

model Incident {
  id               Int      @id @default(autoincrement())
  title            String
  description      String
  severity         Severity
  decision         Decision
  mitreTechnique   String?
  remediationSteps String[] @default([])
  createdAt        DateTime @default(now())
  logs             Log[]
}
